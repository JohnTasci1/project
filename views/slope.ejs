<%- include("partials/header") -%>

<div style = "padding: 3%">
<center>
<h1>Slope Calculator</h1>
<input type="number" class="btn-group"  placeholder="x1"   id="x1">
<input type="number" class="btn-group"  placeholder="y1"  id="y1">
<input type="number" class="btn-group"  placeholder="x2 "  id="x2">
<input type="number" class="btn-group"  placeholder="y2"  id="y2">
<button class = "btn btn-primary calculate-group" onClick = "slopeCalculator()">Calculate</button>
<p></p>
<button id = "slopeAnswer" type = "button" class = "btn btn-light border border-dark"> Answer </button>
</center>
</div>
<div>
<script>
function slopeCalculator(){
    var x1 = $("#x1").val()
    var y1 = $("#y1").val()
    var x2 = $("#x2").val()
    var y2 = $("#y2").val()

    var result = (y2 - y1) / (x2 - x1);

    if(!isNaN(result)){
        $("#slopeAnswer").html("The slope is " + result)
    }
}
</script>
</div>
<%- include("partials/footer") -%>