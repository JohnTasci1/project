<div style = "padding: 3%">
    <center>
    <h2>Square Calculator</h2>
    <img class = "shapes" src="images/square.png" alt="square">
    <br/>
    <input type="number" class="btn-group" placeholder = "Length" min = 0 id="squareAreaLength">
    <button class = "btn btn-primary calculate-group" onClick = "squareArea()">Calculate</button>
    <p></p>
    <button id = "squareAreaAnswer" type = "button" class = "btn btn-light border border-dark"> Answer </button>
