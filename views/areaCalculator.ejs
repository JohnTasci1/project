<div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script>
    //Rectangle Area
    function rectangleArea(){
        var rectangleAreaResult = $("#rectangleAreaWidth").val() * $("#rectangleAreaLength").val()      
        if(!isNaN(rectangleAreaResult)){
                $("#rectangleAreaAnswer").html("Rectangle Area: " + rectangleAreaResult + " units")
        } 
        if ($("#rectangleAreaLength").val() <= 0 || $("#rectangleAreaWidth").val() <= 0){
                $("rectangleAreaAnswer").html("All values must be positive!")
        } 
    }
    //Triangle Area
    function triangleArea(){
        var triangleAreaResult = $("#triangleAreaBase").val() * $("#triangleAreaHeight").val() * 1/2
        var unit = ""
        if (triangleAreaResult > 1){
            unit = " units"
        } else {
            unit = " unit"
        }
        if(!isNaN(triangleAreaResult)){
                 $("#triangleAreaAnswer").html("Triangle Area: " + triangleAreaResult + unit)
        }
        if ($("#triangleAreaBase").val() <= 0 || $("#triangleAreaHeight").val() <= 0){
                $("#triangleAreaAnswer").html("All values must be positive!")
        }
    }
    //Trapezoid Area
    function trapezoidArea(){
        var trapezoidAreaResult = (Number($("#trapezoidAreaBase1").val()) + Number($("#trapezoidAreaBase2").val())) / 2 * Number($("#trapezoidAreaHeight").val())
        var unit = ""
        if (trapezoidAreaResult > 1){
            unit = " units"
        } else {
            unit = " unit"
        }
        if(!isNaN(trapezoidAreaResult)){
            $("#trapezoidAreaAnswer").html("Trapezoid Area: " + trapezoidAreaResult + unit)
        }
        if ($("#trapezoidAreaBase1").val() <= 0 || $("#trapezoidAreaBase2").val() <= 0 || $("#trapezoidAreaHeight").val() <= 0){
            $("#trapezoidAreaAnswer").html("All values must be positive!")
        }
    }
 //Circle Area Calculator 
    function circleArea(){
        var circleAreaResult = Math.PI * (Math.pow($("#circleAreaRadius").val(), 2))
        var unit = ""
        if (circleAreaResult > 1){
            unit = " units"
        } else {
            unit = " unit"
        }
        if(!isNaN(circleAreaResult)){
             $("#circleAreaAnswer").html("The area is " + circleAreaResult + unit)
        } 
        if ($("#circleAreaRadius").val() <= 0){
            $("#circleAreaAnswer").html("All values must be positive!")
        }
    }
//Sector Area Calculator
function sectorArea(){
        var sectorAreaResult = $("#sectorAreaAngle").val() / 360 * Math.PI * Math.pow($("#sectorAreaRadius").val(), 2)
        var unit = ""
        if (sectorAreaResult > 1){
            unit = " units"
        } else {
            unit = " unit"
        }
        if(!isNaN(sectorAreaResult)){
            $("#sectorAreaAnswer").html("The area is " + sectorAreaResult + unit)
        }
        if ($("#sectorAreaRadius").val() <= 0 || $("#sectorAreaAngle").val() <= 0){
            $("sectorAreaAnswer").html("All values must be positive!")
        } 
    }
    //Ellipse Area Calculator
function ellipseArea(){
        var ellipseAreaResult = Math.PI * $("#ellipseAreaMajor").val() * $("#ellipseAreaMinor").val()
        var unit = ""
        if (ellipseAreaResult > 1){unit = " units"} else {unit = " unit"}
        if(!isNaN(ellipseAreaResult)){
            $("#ellipseAreaAnswer").html("The area is " + ellipseAreaResult + unit)
        }
        if ($("#ellipseAreaMajor").val() <= 0 || $("#ellipseAreaMinor").val() <= 0){
            $("#ellipseAreaAnswer").html("All values must be positive!")
        }
    }
        //Parallelogram Area Calculator
function parallelogramArea(){
        var parallelogramAreaResult = $("#parallelogramAreaBase").val() *  $("#parallelogramAreaHeight").val()
        var unit = ""
        if (parallelogramAreaResult > 1){unit = " units"} else {unit = " unit"}
        if(!isNaN(parallelogramAreaResult)){
             $("#parallelogramAreaAnswer").html("The area is " + parallelogramAreaResult + unit)
        }
        if ( $("#parallelogramAreaBase").val() <= 0 || $("#parallelogramAreaHeight").val() <= 0){
             $("#parallelogramAreaAnswer").html("All values must be positive!")
        }
    }
        //Square Area Calculator
function squareArea(){
        var squareAreaResult = Math.pow($("#squareAreaLength").val(), 2)
        var unit = ""
        if (squareAreaResult > 1){unit = " units"} else {unit = " unit"}
        if(!isNaN(squareAreaResult)){
            $("#squareAreaAnswer").html("The area is " + squareAreaResult + unit)
        }
        if ($("#squareAreaLength").val() <= 0){
            $("#squareAreaAnswer").html("Square Length Must Be Positive!")
        }
    }
</script>
</div>
