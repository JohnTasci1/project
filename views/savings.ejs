<%- include("partials/header") -%>
<div style = "padding: 3%">
    <div>
    <center>
    <h1>Savings Calculator</h1>
    <br/>
    <input type="number" class="btn-group" placeholder = "Starting Balance $" id="balance">
    <p></p>
    <p>Deposits</p>
    <input type="number" class="btn-group" placeholder = "Amount $" id="amount">
    <input type="number" class="btn-group" placeholder = "Frequency 1-365" id="frequency">
    <input type="number" class="btn-group" placeholder = "Years" id="years">
    <button class = "btn btn-primary calculate-group" onClick = "savings()">Calculate</button>
    <br/>
    <button id = "savingsCalc" type = "button" class = "btn btn-light border border-dark"> Answer </button>
    </center>
    </div>
</div>
<div>
    <script>
        function savings() {
            var balance = $("#balance").val()
            var amount = $("#amount").val()
            var frequency = $("#frequency").val()
            var years = $("#years").val()

            var total = Number(balance) + (Number(amount) * Number(frequency)) * Number(years)
            var net = Math.round(total * 100) / 100 - Math.round(balance * 100) / 100
            var year = ""

            if (years > 1){
                year = "years"
            } else {
                year = "year"
            }
            if (!isNaN(total)){
                $("#savingsCalc").html("Initial Balance: $" + Math.round(balance * 100) / 100 + "<br/>Total number of deposits: " + (years * frequency) + "<br/>You will save a total of $" + Math.round(total * 100) / 100 + " after " + Math.round(years * 100) / 100 + " " + year + "<br/>Total Money Deposited without Balance: $" + net)
            }
        if(balance < 0 || amount <= 0 || frequency <= 0){
            $("#savingsCalc").html("Values can't be negative")
         } else if (years < 1){
            $("#savingsCalc").html("Year must be greater than or equal to 1")
         } else if (frequency < 1 || frequency > 365) {
            $("#savingsCalc").html("Frequency must be in the range of 1-365")
         } 
        }
    </script>
</div>
<%- include("partials/footer") -%>