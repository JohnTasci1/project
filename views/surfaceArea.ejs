<!-- Square Pyramid Surface Area Calculator -->
<div style = "padding: 3%">
    <center>
    <br/>
    <h1>Square Pyramid Calculator</h1>
    <br/>
    <img class = "shapes" src="images/squarePyramid.png" alt="squarePyramid">
    <br/>
    <br/>
    <input type="number" class="btn-group" placeholder = "Base Edge" min = 0 id="squarePyramidSurfaceEdge">
    <input type="number" class="btn-group" placeholder = "Height" min = 0 id="squarePyramidSurfaceHeight">
    <button class = "btn btn-primary calculate-group" onClick = "squarePyramidSurface()">Calculate</button>
    <br/>
    <button id = "squarePyramidBaseSurfaceAnswer" type = "button" class = "btn btn-light border border-dark">Answer</button>
    <br/>
    <button id = "squarePyramidLateralSurfaceAnswer" type = "button" class = "btn btn-light border border-dark"> Answer </button>
    <br/>
    <button id = "squarePyramidTotalSurfaceAnswer" type = "button" class = "btn btn-light border border-dark"> Answer </button>
    </center>
