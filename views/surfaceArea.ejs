<div>
<script>
    // Sphere Surface Area Calculator
    function sphereSurface(){
        var sphereSurfaceRadius = $("#sphereSurfaceRadius").val()

        var sphereSurfaceResult = 4 * Math.PI * Math.pow(sphereSurfaceRadius, 2)
        if(!isNaN(sphereSurfaceResult)){
            $("#sphereSurfaceAnswer").html("The surface area is " + sphereSurfaceResult)
        }
        if (sphereSurfaceRadius <= 0){
            $("#sphereSurfaceAnswer").html("All values must be positive!")
        }
    }
    // Cone Surface Area Calculator
    function coneSurface(){
        var coneSurfaceRadius = $("#coneSurfaceRadius").val()
        var coneSurfaceHeight = $("#coneSurfaceHeight").val()

        var coneBaseResult = Math.PI * Math.pow(coneSurfaceRadius, 2)
        var coneLateralResult = Math.PI * coneSurfaceRadius * Math.sqrt(Math.pow(coneSurfaceRadius,2) + Math.pow(coneSurfaceHeight,2))
        var coneTotalResult = coneBaseResult + coneLateralResult

        if(!isNaN(coneBaseResult)){
            $("#coneBaseAnswer").html("The base surface area is " + coneBaseResult)
        }
        if(!isNaN(coneLateralResult)){
            $("#coneLateralAnswer").html("The lateral surface area is " + coneLateralResult)
        }
        if(!isNaN(coneTotalResult)){
            $("#coneSurfaceAnswer").html("The total surface area is " + coneTotalResult)
        }

        if (coneSurfaceRadius <= 0 || coneSurfaceHeight <= 0){
            $("#coneSurfaceAnswer").html("All values must be positive!")
            $("#coneBaseAnswer").html("All values must be positive!")
            $("#coneLateralAnswer").html("All values must be positive!")
        }
    }
    // Cube Surface Area Calculator
    function cubeSurface(){
        var cubeSurfaceLength = $("#cubeSurfaceLength").val()

        var cubeSurfaceResult = 6 * Math.pow(cubeSurfaceLength, 2)
        if(!isNaN(cubeSurfaceResult)){
            $("#cubeSurfaceAnswer").html("The surface area is " + cubeSurfaceResult);
        }
        if (cubeSurfaceLength <= 0){
            $("#cubeSurfaceAnswer").html("All values must be positive!");
        }
    }
    // Cylinder Surface Area Calculator
    function cylinderSurface(){
        var cylinderSurfaceRadius = $("#cylinderSurfaceRadius").val()
        var cylinderSurfaceHeight = $("#cylinderSurfaceHeight").val()

        var topSurfaceResult = Math.PI * Math.pow(cylinderSurfaceRadius, 2)
        var bottomSurfaceResult = Math.PI * Math.pow(cylinderSurfaceRadius, 2)
        var lateralSurfaceResult = 2 * Math.PI * cylinderSurfaceRadius * cylinderSurfaceHeight
        var totalSurfaceResult = topSurfaceResult + bottomSurfaceResult + lateralSurfaceResult

        if(!isNaN(topSurfaceResult)){
            $("#cylinderTopSurfaceAnswer").html("The base surface area is " + topSurfaceResult)
        }
        if(!isNaN(bottomSurfaceResult)){
            $("#cylinderBottomSurfaceAnswer").html("The lateral surface area is " + bottomSurfaceResult)
        }
        if(!isNaN(lateralSurfaceResult)){
            $("#cylinderLateralSurfaceAnswer").html("The total surface area is " + lateralSurfaceResult)
         }
        if(!isNaN(totalSurfaceResult)){
            $("#cylinderTotalSurfaceAnswer").html("The total surface area is " + totalSurfaceResult)
        }
        if (cylinderSurfaceRadius <= 0 || cylinderSurfaceHeight <= 0){
            $("#cylinderTopSurfaceAnswer").html("All values must be positive!")
            $("#cylinderBottomSurfaceAnswer").html("All values must be positive!")
            $("#cylinderLateralSurfaceAnswer").html("All values must be positive!")
            $("#cylinderTotalSurfaceAnswer").html("All values must be positive!")
        }
    }
    // Rectangular Prism Surface Area Calculator
    function rectangularPrismSurface(){
        var rectangularPrismSurfaceHeight = $("#rectangularPrismSurfaceHeight").val()
        var rectangularPrismSurfaceWidth = $("#rectangularPrismSurfaceWidth").val()
        var rectangularPrismSurfaceLength = $("#rectangularPrismSurfaceLength").val()

        var rectangularPrismSurfaceResult = 2 * (rectangularPrismSurfaceWidth * rectangularPrismSurfaceLength + rectangularPrismSurfaceHeight * rectangularPrismSurfaceLength + rectangularPrismSurfaceHeight * rectangularPrismSurfaceWidth)
        if(!isNaN(rectangularPrismSurfaceResult)){
            $("#rectangularPrismAnswer").html("The surface area is " + rectangularPrismSurfaceResult)
        }
        if (rectangularPrismSurfaceHeight <= 0 || rectangularPrismSurfaceWidth <= 0 || rectangularPrismSurfaceLength <= 0){
            $("#rectangularPrismAnswer").html("All values must be positive!")
        }
    }
    // Capsule Surface Area Calculator
    function capsuleSurface(){
        var capsuleSurfaceRadius = $("#capsuleSurfaceRadius").val()
        var capsuleSurfaceHeight = $("#capsuleSurfaceHeight").val()

        var topSurfaceResult = 2 * Math.PI * Math.pow(capsuleSurfaceRadius, 2)
        var bottomSurfaceResult = topSurfaceResult
        var lateralSurfaceResult = 2 * Math.PI * capsuleSurfaceRadius * capsuleSurfaceHeight
        var totalSurfaceResult = topSurfaceResult + bottomSurfaceResult + lateralSurfaceResult

        if(!isNaN(topSurfaceResult)){
            $("#capsuleTopSurfaceAnswer").html("The base surface area is " + topSurfaceResult)
        }
        if(!isNaN(bottomSurfaceResult)){
            $("#capsuleBottomSurfaceAnswer").html("The lateral surface area is " + bottomSurfaceResult)
        }
        if(!isNaN(lateralSurfaceResult)){
            $("#capsuleLateralSurfaceAnswer").html("The total surface area is " + lateralSurfaceResult)
        }
        if(!isNaN(totalSurfaceResult)){
            $("#capsuleTotalSurfaceAnswer").html("The total surface area is " + totalSurfaceResult)
        }
        if (capsuleSurfaceRadius <= 0 || capsuleSurfaceHeight <= 0){
            $("#capsuleTopSurfaceAnswer").html("All values must be positive!")
            $("#capsuleBottomSurfaceAnswer").html("All values must be positive!")
            $("#capsuleLateralSurfaceAnswer").html("All values must be positive!")
            $("#capsuleTotalSurfaceAnswer").html("All values must be positive!")
        }
    }
    // Square Pyramid Surface Area Calculator
    function squarePyramidSurface(){
        var squarePyramidSurfaceEdge = $("#squarePyramidSurfaceEdge").val()
        var squarePyramidSurfaceHeight = $("#squarePyramidSurfaceHeight").val()

        var baseSurfaceResult = Math.pow(squarePyramidSurfaceEdge, 2)
        var lateralSurfaceResult = 2 * squarePyramidSurfaceEdge * Math.sqrt(Math.pow(squarePyramidSurfaceEdge/2, 2) + Math.pow(squarePyramidSurfaceHeight, 2))
        var totalSurfaceResult = baseSurfaceResult + lateralSurfaceResult

        if(!isNaN(baseSurfaceResult)){
            $("#squarePyramidBaseSurfaceAnswer").html("The base surface area is " + baseSurfaceResult)
        }
        if(!isNaN(lateralSurfaceResult)){
            $("#squarePyramidLateralSurfaceAnswer").html("The lateral surface area is " + lateralSurfaceResult)
        }
        if(!isNaN(totalSurfaceResult)){
            $("#squarePyramidTotalSurfaceAnswer").html("The total surface area is " + totalSurfaceResult)
        }
        if (squarePyramidSurfaceEdge <= 0 || squarePyramidSurfaceHeight <= 0){
            $("#squarePyramidBaseSurfaceAnswer").html("All values must be positive!")
            $("#squarePyramidLateralSurfaceAnswer").html("All values must be positive!")
            $("#squarePyramidTotalSurfaceAnswer").html("All values must be positive!")
      }
    }
</script>
</div>
