<div>
    <script>
    function rectanglePerimeter(){
        var rectanglePerimeterResult = (2 * $("#rectanglePerimeterLength").val()) + (2 * $("#rectanglePerimeterWidth").val())
     if(!isNaN(rectanglePerimeterResult)){
            $("#rectanglePerimeterAnswer").html("Rectangle Perimiter: " + rectanglePerimeterResult)
        }
     if ($("#rectanglePerimeterWidth").val() <= 0 || $("#rectanglePerimeterLength").val() <= 0 ){
            $("#rectanglePerimeterAnswer").html("All values must be positive!")
        }
    }
    function squarePerimeter(){
        var squarePerimeterResult = 4 * $("#squarePerimeterLength").val()
    if(!isNaN(squarePerimeterResult)){
        $("#squarePerimeterAnswer").html("Square Perimiter: " + squarePerimeterResult)
     }
     if ( $("#squarePerimeterLength").val() <= 0){
            $("#squarePerimeterAnswer").html("All values must be positive!")
        }
    }
    function trianglePerimeter(){
        var trianglePerimeterResult = Number($("#trianglePerimeterSide1").val()) + Number($("#trianglePerimeterBase").val()) + Number($("#trianglePerimeterSide2").val())
    if(!isNaN(trianglePerimeterResult)){
        $("#trianglePerimeterAnswer").html("Triangle Perimeter: " + trianglePerimeterResult)
        }
    if ($("#trianglePerimeterSide1").val() <= 0 || $("#trianglePerimeterBase").val() <= 0 || $("#trianglePerimeterSide2").val() <= 0){
        $("#trianglePerimeterAnswer").html("All values must be positive!");
        }
    }
    function circlePerimeter(){
        var circlePerimeterResult = 2 * Math.PI * $("#circlePerimeterRadius").val()
    if(!isNaN(circlePerimeterResult)){
        $("#circlePerimeterAnswer").html("Circle Circumference: " + circlePerimeterResult)
     }
     if ($("#circlePerimeterRadius").val() <= 0){
         $("#circlePerimeterAnswer").html("All values must be positive!")
        }
    }
    function trapezoidPerimeter(){
         var trapezoidPerimeterResult = Number($("#trapezoidPerimeterBase").val()) + Number($("#trapezoidPerimeterBase2").val()) + Number($("#trapezoidPerimeterSide").val()) + Number($("#trapezoidPerimeterSide2").val())
     if(!isNaN(trapezoidPerimeterResult)){
        $("#trapezoidPerimeterAnswer").html("Trapezoid Perimeter: " + trapezoidPerimeterResult)
     }
     if ($("#trapezoidPerimeterBase").val() <= 0 || $("#trapezoidPerimeterBase2").val() <= 0 || $("#trapezoidPerimeterSide").val() <= 0 || $("#trapezoidPerimeterSide2").val() <= 0){
        $("#trapezoidPerimeterAnswer").html("All values must be positive!")
    }
    }
    // Parallelogram Perimeter
    function parallelogramPerimeter(){
        var parallelogramPerimeterResult = parseFloat(2 * $("#parallelogramPerimeterLength").val() + 2 * $("#parallelogramPerimeterWidth").val())
    if(!isNaN(parallelogramPerimeterResult)){
        $("#parallelogramPerimeterAnswer").html("Parallelogram Perimeter: " + parallelogramPerimeterResult)
     }
     if ($("#parallelogramPerimeterLength").val() <= 0 || $("#parallelogramPerimeterWidth").val() <= 0){
            $("#parallelogramPerimeterAnswer").html("All values must be positive!")
        }
    }
    function rhombusPerimeter(){
        var rhombusPerimeterResult = 4 * $("#rhombusPerimeterLength").val()
     if(!isNaN(rhombusPerimeterResult)){
        $("#rhombusPerimeterAnswer").html("The perimeter is " + rhombusPerimeterResult)
     }
     if ($("#rhombusPerimeterLength").val() <= 0){
            $("#rhombusPerimeterAnswer").html("All values must be positive!")
        }
    }
    function kitePerimeter(){
        var kitePerimeterResult = parseFloat(2 * $("#kitePerimeterTopLength").val() + 2 * $("#kitePerimeterBottomLength").val())
     if(!isNaN(kitePerimeterResult)){
            $("#kitePerimeterAnswer").html("The perimeter is " + kitePerimeterResult)
     }
     if ($("#kitePerimeterTopLength").val() <= 0 || $("#kitePerimeterBottomLength").val() <= 0){
            $("#kitePerimeterAnswer").html("All values must be positive!")
        }
    }
    // Annulus Perimeter
    function annulusPerimeter(){
        var annulusPerimeterResult = 2 * Math.PI * (Number($("#annulusPerimeterTopRadius").val()) + Number($("#annulusPerimeterBottomRadius").val()))
    if(!isNaN(annulusPerimeterResult)){
        $("#annulusPerimeterAnswer").html("The perimeter is " + annulusPerimeterResult)
     }
     if ($("#annulusPerimeterBottomRadius").val() <= 0 || $("#annulusPerimeterTopRadius").val() <= 0){
            $("#annulusPerimeterAnswer").html("All values must be positive!")
    } else if ($("#annulusPerimeterTopRadius").val() - $("#annulusPerimeterBottomRadius").val() <= 0){
            $("#annulusPerimeterAnswer").html("First value must be greater than second")
    }
}
    </script>
</div>
