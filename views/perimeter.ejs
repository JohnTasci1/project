    <div>
    <center>
    <br/>
    <!-- Annulus Perimeter Calculator -->
    <h3>Annulus (ring) Perimeter Calculator</h3>
    <br/>
    <img class = "shapes" src="images/annulus.svg" alt="Kite">
    <br/>
    <br/>
    <input type="number" class="btn-group" id="annulusPerimeterTopRadius" min = 0 placeholder="R">
    <input type="number" class="btn-group" id="annulusPerimeterBottomRadius" min = 0 placeholder="r">
    <button class = "btn btn-primary calculate-group" onClick = "annulusPerimeter()">Calculate</button>
