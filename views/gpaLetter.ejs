<%- include("partials/header") -%>
<div style = "padding: 3%">
    <div>
    <center>
    <h1>GPA to letter grade conversion</h1>
    <p>GPA to letter grade conversion calculator</p>
    <br/>

    <input type="number" class="btn-group" id="gpa" min = 0 placeholder="GPA">
    <button class = "btn btn-primary calculate-group" onClick = "gpaToLetter()">Calculate</button>
    <br/>
    <button id = "letterAnswer" type = "button" class = "btn btn-light border border-dark"> Answer </button>
    </center>
    <br/>
    <table class = "table table-striped table-bordered">
        <thead class = "thead-dark">
            <th scope="col">Letter Grade</th>
            <th scope="col">Percent Grade</th>
            <th scope="col">4.0 Scale</th>
        </thead>
        <tbody>
          <tr><td>A+</td><td>97-100</td><td>4.0</td></tr>
          <tr><td>A</td><td>93-96</td><td>4.0</td></tr>
          <tr><td>A-</td><td>90-92</td><td>3.7</td></tr>
          <tr><td>B+</td><td>87-89</td><td>3.3</td></tr>
          <tr><td>B</td><td>83-86</td><td>3.0</td></tr>
          <tr><td>B-</td><td>80-82</td><td>2.7</td></tr>
          <tr><td>C+</td><td>77-79</td><td>2.3</td></tr>
          <tr><td>C</td><td>73-76</td><td>2</td></tr>
          <tr><td>C-</td><td>70-72</td><td>1.7</td></tr>
          <tr><td>D+</td><td>67-69</td><td>1.0</td></tr>
          <tr><td>E/F</td><td>Below 65</td><td>0.0</td></tr>
      </table>
    </div>
</div>
<div>
<script>
    function gpaToLetter(){
        var gpa = $("#gpa").val()
        if (gpa < 1) {
            $("#letterAnswer").text("You average is F")
        } else if (gpa < 1.3) {
            $("#letterAnswer").text("You average is D")
        } else if (gpa < 1.7) {
            $("#letterAnswer").text("You average is D+")
        } else if (gpa < 2) {
            $("#letterAnswer").text("You average is C-")
        } else if (gpa < 2.3) {
            $("#letterAnswer").text("You average is C")
        } else if (gpa < 2.7) {
            $("#letterAnswer").text("You average is C+")
        }  else if (gpa < 3) {
            $("#letterAnswer").text("You average is B-")
        } else if (gpa < 3.3) {
            $("#letterAnswer").text("You average is B")
        } else if (gpa < 3.7) {
            $("#letterAnswer").text("You average is B+")
        } else if (gpa < 4) {
            $("#letterAnswer").text("You average is A-")
        } else if (gpa >= 4) {
            $("#letterAnswer").text("You average is A")
        }
    }
</script>
</div>
<%- include("partials/footer") -%>